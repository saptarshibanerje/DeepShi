@{ Layout = "~/Areas/User/Views/Shared/_Layout.cshtml"; }

@inject IStringLocalizer<RegisterViewModel> _localizer
@model RegisterViewModel

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">User Details</h3>
            </div>
            <div class="card-body">
                <form asp-action="Register" asp-controller="Account" method="post" id="frmRegister">
                    @Html.AntiForgeryToken()
                    <input type="hidden" value="admin" asp-for="RegisterBy" />
                    @*<input type="hidden" asp-for="Appusers.EmployeeId" />*@
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="EmailId">@_localizer["EmailId"]</label>
                                <input asp-for="EmailId" class="form-control alphanumeric" placeholder="e.g. DeepShi">
                                <div class="text-danger "><span asp-validation-for="EmailId" class=""></span></div>
                            </div>

                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Appusers.EmpName">@_localizer["EmpName"]</label>
                                <input asp-for="Appusers.EmpName" class="form-control alphanumeric" placeholder="e.g. DeepShi" readonly>
                                <div class="text-danger "><span asp-validation-for="Appusers.EmpName" class=""></span></div>
                            </div>

                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Appusers.EmpDivision">@_localizer["EmpDivision"]</label>
                                <input asp-for="Appusers.EmpDivision" class="form-control alphanumeric" placeholder="e.g. DeepShi" readonly>
                                <div class="text-danger "><span asp-validation-for="Appusers.EmpDivision" class=""></span></div>
                            </div>

                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Appusers.Department">@_localizer["Department"]</label>
                                <input asp-for="Appusers.Department" class="form-control alphanumeric" placeholder="e.g. DeepShi" readonly>
                                <div class="text-danger "><span asp-validation-for="Appusers.Department" class=""></span></div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Appusers.EmpDesignation">@_localizer["EmpDesignation"]</label>
                                <input asp-for="Appusers.EmpDesignation" class="form-control alphanumeric" placeholder="e.g. DeepShi" readonly>
                                <div class="text-danger "><span asp-validation-for="Appusers.EmpDesignation" class=""></span></div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Appusers.EmployeeId">@_localizer["EmployeeId"]</label>
                                <input asp-for="Appusers.EmployeeId" class="form-control alphanumeric" placeholder="e.g. DeepShi" readonly>
                                <div class="text-danger "><span asp-validation-for="Appusers.EmployeeId" class=""></span></div>
                            </div>
                        </div>

                    </div>

                    @{ var id1 = Convert.ToString(ViewContext.RouteData.Values["id1"]).NullToString(); }
                    @if (id1 == "")
                    {
        <div class="float-left">
            <a asp-area="Master" asp-action="UserList" asp-controller="Account" class="btn btn-primary btn-block float-right"><i class="fa fa-arrow-left"></i>&nbsp; User List</a>

            @*<button type="submit" class="btn btn-primary btn-block float-right"> </button>*@
        </div>
                        <div class="float-right">
                            <button type="submit" class="btn btn-primary btn-block float-right" id="btn_client_save" data-usefor="create"><i class="fa fa-plus"></i> &nbsp; Save</button>
                        </div>}

                </form>

            </div>
        </div>
    </div>

</div>
@section Scripts{
    <script src="~/js/PageJs/user.js"></script>
}