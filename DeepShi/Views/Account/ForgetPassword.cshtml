@model ForgetPasswordViewModel

<div class="min-h-screen bg-[url('../img/DeepShi-login-bg.jpg')] bg-cover">
    <div class="mx-auto flex items-center justify-center rounded-xl py-12 px-4 pt-2">
        <div class="mt-36 w-[350px] rounded-xl bg-white/10 p-8 text-white shadow-xl border border-white shadow-white/10 backdrop-blur-md hover:shadow-white/20">
            <div>
                <h2 class="mt-2 text-center text-3xl font-bold tracking-tight">DeepShi</h2>
                <p class="mt-2 text-center text-sm">Version 1.0</p>
            </div>
            <form asp-action="ForgetPassword" asp-controller="Account" method="post" id="frmForgetPassword">
                @Html.AntiForgeryToken()

                <div class="-space-y-px rounded-md shadow-sm grid gap-3">
                    <div>
                        <label asp-for="EmailId" class="sr-only">Email Address</label>
                        <input asp-for="EmailId" class="relative block w-full appearance-none rounded-none rounded-t-md border border-gray-50 bg-transparent px-3 py-2 text-white  placeholder-white focus:z-10 focus:outline-none sm:text-sm" placeholder="Email Address">
                        <span asp-validation-for="EmailId" class="text-danger"></span>

                    </div>
                    <div>
                        <button type="submit" class="group relative flex w-full justify-center rounded-md border border-transparent bg-white/20 hover:shadow-xl hover:shadow-black/10 py-2 px-4 text-sm font-semibold text-white hover:bg-white/20 focus:outline-none">Submit</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
